    <%= link_to "back to dashboard", dashboard_path, class: "tbd" %>
    <%= render 'shared/navbar' %>
    <% @orders.each do |order| %>
    <div class="order-card">
        <h2>#
            <%= order.id %>
        </h2>
        <div class="order-info">
            <h3>
              <%= order.user.first_name %>
              <%= order.user.last_name %>
            </h3>
        </div>
        <div class="order-items">
            <% total = 0 %>
            <% order.order_items.each do |order_item|  %>
            <h4>
              <%= order_item.menu_item.name%>
              <%= order_item.menu_item.price%>
            </h4>
              <h2><%= order_item.menu_item.price * order_item.quantity %> </h2>
            <% total = total + order_item.menu_item.price * order_item.quantity %>
            <% end %>
            <h3>
                â‚¬<%= '%.2f' % total %>
            </h3>
        </div>
        <% if order.status == "not ready" %>
          <%= link_to "Ready for pick-up", order_path(order), method: :patch %>
        <% elsif order.status == "awaiting pick-up" %>
          <%= link_to "Complete", order_path(order), method: :patch %>
        <% end %>
    </div>
    <% end %>
