<% if @order.payment_status == "paid" %>
  <div class="payment-success">
    <h1>Your order is confirmed!!!</h1>
    <div class="blue-body">
      <img style="margin-bottom: 10px; border-radius: 10px;" src="https://media.giphy.com/media/l0MYxef0mpdcnQnvi/giphy.gif" alt="confirmed">
      <%= link_to "See my orders", show_current_orders_path, class: "btn btn-primary" %>
    </div>
  </div>
<% else %>
  <div class="payment-failed">
    <h1>Something went wrong :(</h1>
    <div class="blue-body">
      <img style="margin-bottom: 10px; border-radius: 10px;" src="https://media.giphy.com/media/nKN7E76a27Uek/giphy.gif" alt="confirmed">
      <%= link_to "See my orders", show_current_orders_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
