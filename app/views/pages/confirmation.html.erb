<div class="blue-body">
  <div class="confirmation">
    <% if @order.payment_status == "paid" %>
      <h2>Your order is confirmed!!!</h2>
      <img style="margin-bottom: 10px; border-radius: 10px;"
      src="https://media.giphy.com/media/MSCzxrLEF25feISTIz/giphy.gif" alt="confirmed">
      <h2>Eet Smakelijk</h2>
    <% else %>
      <h2>Sorry :( something went wrong</h2>
      <img style="margin-bottom: 10px; border-radius: 10px;"
      src="https://media.giphy.com/media/nKN7E76a27Uek/giphy.gif" alt="confirmed">
      <h2>Your payment status is <%= @order.payment_status %></h2>
    <% end %>
  </div>
  <div class="nav-btn-container">
    <div class="nav-btn">
      <%= link_to "See my orders", show_current_orders_path, class: "btn btn-primary" %>
    </div>
    <div class="nav-btn">
      <%= link_to "Back to menu", menu_items_path, class: "btn btn-primary" %>
    </div>
    <div class="nav-btn">
    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
    </div>
  </div>
</div>
