<div class="blue-body">
  <%= render 'shared/navbar'%>
	  <h3 class="medium-title">Daily Specials</h3>
	  <% @menu_items.each do |menu_item| %>
	  	<% if menu_item.category == "daily_specials" %>
		  <div class="menu-card col-8" id="menu-item-<%= menu_item.id %>">
		    <div class="menu-image-container">
		      <%= cl_image_tag menu_item.image.key, height: 300, width: 300, crop: :fit, class: "menu-item-img" %>
		    </div>
		    <div class="menu-text-container">
		      <div class="menu-title"><strong><%= menu_item.name.capitalize %></strong></div>
		      <div class="menu-item-description"><p><%= menu_item.description %></p></div>
		      <div class="menu-item-price">€ <%= number_with_precision(menu_item.price, precision: 2) %></div>
		    </div>
		    <div class="add-to-cart">
		      <div class="add-button">
            <% if menu_item.available? %>
            <% if !current_user.admin? %>
               <%= simple_form_for(@order_item, url: order_items_path(@cart.id), remote: true) do |f| %>
                <%= hidden_field_tag(:item_id, menu_item.id) %>
                <%= f.input :quantity, label: "Quantity", placeholder: '0', input_html: {value: 1}, as: :integer, required: false %>
                <%= f.button :button, ' Add to Cart', class: 'btn-icon', id: 'add-to-cart'%>
              <% end %>
            <% end %>

              <% else %>
              <h5>Unavailable</h5>
            <% end %>
		    	</div>
		    </div>
		  </div>
		  <% end %>
	  <% end %>

