<%= link_to "view cart", checkout_order_path(@cart) %>
<div class="blue-body">
<%= render 'shared/navbar'%>

<% @menu_items.each do |menu_item| %>
  <div class="menu-card">

      <div class="menu-image-container">
        <%= cl_image_tag @menu_item.image.key, height: 300, width: 400, crop: :fill %>
      </div>


      <div class="menu-text-container">

          <div class="menu-title">
            <strong><%= menu_item.name.capitalize %></strong>
          </div>

        <div class="menu-item-description">
          <p>Lorem ipsum dolore sit amet<%= menu_item.description %> </p>
        </div>
      </div>



      <div class="add-to-cart">
          <div class="menu-item-price">
            12.37 â‚¬<%= menu_item.price %>
          </div>
          <div class="add-button">
        <%= simple_form_for @order_item, url: order_items_path(@cart.id) do |f| %>
          <%= hidden_field_tag(:item_id, menu_item.id) %>
          <%= f.button :submit, value: "Add to Cart", style: "margin: 0; color: white;" %>
          </div>
        <% end %>
      </div>

  </div>
<% end %>

